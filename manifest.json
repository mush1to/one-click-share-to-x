{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "version": "1.0.0",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_title": "__MSG_appName__",
    "default_icon": {
      "16": "icons/icon16.png",
